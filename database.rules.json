
{
  "rules": {
    "canonicalProducts": {
      ".indexOn": ["normalizedName"],
      ".read": "true",
      ".write": "auth != null"
    },
    "advertisements": {
      ".read": "true",
      ".write": "auth != null"
    },
    "stores": {
      ".read": "true",
      ".write": "auth != null"
    },
    "suggestedNewProducts": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "userSettings": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "priceHistory": {
      ".read": "true",
      ".write": "auth != null"
    }
  }
}
